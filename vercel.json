{
  "version": 2,
  "rewrites": [
    {
      "source": "/api",
      "destination": "/api/index.py"
    },
    {
      "source": "/api/scrape",
      "destination": "/api/scrape.py"
    },
    {
      "source": "/api/batch",
      "destination": "/api/batch.py"
    },
    {
      "source": "/api/status/:job_id",
      "destination": "/api/status.py?job_id=:job_id"
    },
    {
      "source": "/api/health",
      "destination": "/api/health.py"
    },
    {
      "source": "/(.*)",
      "destination": "/api/index.py"
    }
  ],
  "functions": {
    "api/**/*.py": {
      "maxDuration": 60,
      "memory": 1024
    }
  }
}
